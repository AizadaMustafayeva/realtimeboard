
@{
    ViewBag.Title = "Index";
}

<div ng-controller="docsController as docsCtrl" ng-init="docsCtrl.init()">
    <h2>
        Document
        <small>
            <a class="btn btn-default" href="doc/Create"><span class="glyphicon glyphicon-plus text-success" aria-hidden="true"></span></a>
        </small>
    </h2>

    <div class="row">
        <div class="col-md-4">
            <div>
                <h3>My documents</h3>
                <table class="table" style="max-height:350px">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Group</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in docsCtrl.docs" ng-class="{'active' : docsCtrl.docSelected.id == item.id}" ng-click="docsCtrl.selectDoc(item)">
                            <td>{{item.title}}</td>
                            <td>{{item.date}}</td>
                            <td>{{item.type.title}}</td>
                            <td>{{item.group.title}}</td>
                            <td><a href="/doc/doc/{{item.id}}"><span class="glyphicon glyphicon-chevron-right text-primary" aria-hidden="true"></span></a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div>
                <h3>Another</h3>
                <table class="table" style="max-height:350px">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Group</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in docsCtrl.anotherDocs" ng-class="{'active' : docsCtrl.docSelected.id == item.id}" ng-click="docsCtrl.selectAnotherDoc(item)">
                            <td>{{item.title}}</td>
                            <td>{{item.date}}</td>
                            <td>{{item.type.title}}</td>
                            <td>{{item.group.title}}</td>
                            <td><a href="/doc/doc/{{item.id}}"><span class="glyphicon glyphicon-chevron-right text-primary" aria-hidden="true"></span></a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            <div>
                <table class="table" style="max-height:350px">
                    <thead>
                        <tr><th>All users</th></tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in docsCtrl.allUsers">
                            <td>{{item.name}}</td>
                            <td><button ng-show="docsCtrl.myDoc" ng-click="docsCtrl.addPersonInGroup(item)" class="btn btn-default"><span class="glyphicon glyphicon-plus text-success" aria-hidden="true"></span></button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div>
                <table class="table" style="max-height:350px">
                    <thead>
                        <tr><th>In group</th></tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in docsCtrl.groupUsers">
                            <td>{{item.name}}</td>
                            <td><button ng-show="docsCtrl.myDoc" ng-click="docsCtrl.removePersonInGroup(item)" class="btn btn-default"><span class="glyphicon glyphicon-remove text-danger" aria-hidden="true"></span></button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

